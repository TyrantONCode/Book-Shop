        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book_Shop"
        mc:Ignorable="d"
        Title="UserSignupOrLoginWindow" WindowStartupLocation="CenterScreen"
        Background="#d2c912 " Height="200" Width="350"
        WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Border  BorderThickness="2,2,2,2" BorderBrush="Black" Grid.ColumnSpan="2">

        </Border>
        <Button Foreground="Red" Background=" White " Content="X" x:Name="ExitButton"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Click="ExitButton_Click" Margin="329,1,0,0"/>

        <Button x:Name="UserLoginSelectButton" Content="LOGIN" HorizontalAlignment="Left" Margin="211,0,0,0" VerticalAlignment="Center" Height="32" Width="68" Click="UserLoginSelectButton_Click"/>
        <Button x:Name="UserSignupSelectButton" Content="SIGNUP" HorizontalAlignment="Left" Margin="59,0,0,0" VerticalAlignment="Center" Height="32" Width="68" Click="UserSignupSelectButton_Click"/>



    </Grid>
</Window>
